{
  "name": "emergence",
  "version": "0.1.0",
  "private": true,
  "description": "Emergence Engine monorepo - browser-native 2D game engine with integrated editor",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=colony",
    "dev:editor": "npm run dev --workspace=emergence-editor",
    "build": "npm run build --workspace=emergence-engine && npm run build --workspace=colony && npm run build --workspace=emergence-editor",
    "build:engine": "npm run build --workspace=emergence-engine",
    "build:colony": "npm run build --workspace=colony",
    "build:editor": "npm run build --workspace=emergence-editor",
    "test": "npm run test --workspace=emergence-engine",
    "test:watch": "npm run test:watch --workspace=emergence-engine",
    "test:coverage": "npm run test:coverage --workspace=emergence-engine"
  },
  "author": "astrosteveo",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/astrosteveo/emergence-engine"
  },
  "bugs": {
    "url": "https://github.com/astrosteveo/emergence-engine/issues"
  },
  "homepage": "https://github.com/astrosteveo/emergence-engine#readme"
}
